<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.baopingx.myapplication.BtActivity">

    <TextView android:text="@string/title_activity_bt" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openBtAdapter"
        android:id="@+id/button2"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="141dp"
        android:background="@mipmap/open" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="mBackActivity"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button2"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/back" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="closeBtAdapter"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/close" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:onClick="mShowFileChooser"
        style="@style/AppTheme.AppBarOverlay"
        android:background="@mipmap/folder" />
    
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Dir"
        android:id="@+id/button12"
        android:layout_marginTop="73dp"
        android:onClick="CreateStudioDir"
        android:layout_below="@+id/button11"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="copy file"
        android:id="@+id/button13"
        android:layout_alignTop="@+id/button12"
        android:layout_alignParentEnd="true"
        android:onClick="mCopyFile" />

</RelativeLayout>
